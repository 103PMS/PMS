<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.estate.entity.Department" table="depart_tb" catalog="estate">
     
     <id name="depart_id" type="java.lang.Integer">
       <column name="depart_id"/>
       <generator class="identity"/>
     </id>
     
     <property name="depart_name" type="java.lang.String">
      <column name="depart_name" length="20"></column>
     </property>
     
     <many-to-one name="user" class="com.estate.entity.User" fetch="select" >
     	<column name="user_id"></column>
     </many-to-one>
     
     <property name="depart_phone" type="java.lang.String">
     	<column name="depart_phone" length="20"></column>
     </property>
     
     <property name="depart_information" type="java.lang.String">
     	<column name="depart_information" length="120"></column>
     </property>
     
     <set name="users" inverse="true">
       <key>
       	<column name="depart_id"></column>
       </key>
       <one-to-many class="com.estate.entity.User"/>
     </set>
  
  </class>
</hibernate-mapping>